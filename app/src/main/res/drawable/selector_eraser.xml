<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">

            <item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
                    <corners android:radius="@dimen/shape_radius" />
                    <size android:width="@dimen/shape_size" android:height="@dimen/shape_size" />

                    <solid android:color="@color/icon_fiolet_color" />

                </shape>
            </item>


            <item android:bottom="@dimen/main_margin" android:drawable="@drawable/icon_eraser" android:gravity="center" android:left="16dp" android:right="16dp" android:top="16dp" />

        </layer-list>
    </item>
    <item android:state_checked="false">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">

            <item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
                    <corners android:radius="@dimen/shape_radius" />
                    <size android:width="@dimen/shape_size" android:height="@dimen/shape_size" />

                    <solid android:color="@android:color/transparent" />

                </shape>
            </item>


            <item android:bottom="@dimen/main_margin" android:drawable="@drawable/icon_eraser_default" android:gravity="center" android:left="16dp" android:right="16dp" android:top="16dp" />

        </layer-list>
    </item>
</selector>