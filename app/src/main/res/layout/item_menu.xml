<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="@dimen/category_image_border_size"
        android:layout_height="@dimen/category_image_border_size"
        android:layout_centerInParent="true"
        android:background="@drawable/category_border" />

    <ImageView
        android:id="@+id/grid_image"
        android:layout_width="@dimen/category_image_size"
        android:layout_height="@dimen/category_image_size"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:background="@android:color/transparent"
        android:clickable="false"
        android:id="@+id/ll_progress"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_width="@dimen/category_image_border_size"
        android:layout_height="@dimen/category_image_border_size" >

        <ProgressBar
            android:id="@+id/pb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>